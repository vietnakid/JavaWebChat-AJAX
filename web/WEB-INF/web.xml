<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>UTF-8-Filter</filter-name>
        <filter-class>filter.UTF8Filter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>UTF-8-Filter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    
    <servlet>
        <servlet-name>AccountController</servlet-name>
        <servlet-class>controller.AccountController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AccountController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>HandleSendMessageController</servlet-name>
        <servlet-class>controller.HandleSendMessageController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HandleGetMessageController</servlet-name>
        <servlet-class>controller.HandleGetMessageController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HandleGetRoomController</servlet-name>
        <servlet-class>controller.HandleGetRoomController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterController</servlet-name>
        <servlet-class>controller.RegisterController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HandleGetAllUsersRequest</servlet-name>
        <servlet-class>controller.HandleGetAllUsersRequest</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateRoomChat</servlet-name>
        <servlet-class>controller.CreateRoomChat</servlet-class>
    </servlet>
     <servlet>
        <servlet-name>BannedWordController</servlet-name>
        <servlet-class>controller.BannedWordController</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>HandleSendMessageController</servlet-name>
        <url-pattern>/HandleSendMessageController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HandleGetMessageController</servlet-name>
        <url-pattern>/HandleGetMessageController</url-pattern>
    </servlet-mapping>
    
    <filter>
        <filter-name>AuthenFilter</filter-name>
        <filter-class>filter.AuthenFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthenFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    
    <filter>
        <filter-name>AccessChatRoomFilter</filter-name>
        <filter-class>filter.AccessChatRoomFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AccessChatRoomFilter</filter-name>
        <url-pattern>/chat.jsp</url-pattern>
    </filter-mapping>
    
    <servlet-mapping>
        <servlet-name>HandleGetRoomController</servlet-name>
        <url-pattern>/HandleGetRoomController</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>RegisterController</servlet-name>
        <url-pattern>/Register</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
    <servlet-mapping>
        <servlet-name>HandleGetAllUsersRequest</servlet-name>
        <url-pattern>/HandleGetAllUsersRequest</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateRoomChat</servlet-name>
        <url-pattern>/CreateRoomChat</url-pattern>
    </servlet-mapping>
     <servlet-mapping>
        <servlet-name>BannedWordController</servlet-name>
        <url-pattern>/BannedWord</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
